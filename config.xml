<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.example"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Univas Portal</name>

    <description>
       Interface mobile login portal 
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Wanderval Carvalho
    </author>
	<preference name="fullscreen"                 value="true" />    
	<preference name="android-installLocation"    value="auto" /> 
	<preference name="portrait" value="default" />
	
	<icon src="icon.png" />
	<icon src="images/icon_96.png"  gap:platform="android" width="96" height="96" />
	<gap:splash src="images/splash_screen.png"  gap:platform="android" gap:density="ldpi" />
	
	<feature name="Camera">
		<param name="android-package" value="org.apache.cordova.CameraLauncher" />
	</feature>
	<feature name="Geolocation">
		<param name="android-package" value="org.apache.cordova.GeoBroker" />
	</feature>
	
</widget>